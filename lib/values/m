Padding(
          padding: EdgeInsets.only(bottom: 16.0),
          child: ElevatedButton(
            onPressed: () {
              // Implement reset functionality
              setState(() {
                _initializedBoard();
                whitePiecesTaken.clear();
                blackPiecesTaken.clear();
                whiteSecondsRemaining = 600;
                blackSecondsRemaining = 600;
                isWhiteTurn = true;
                checkStatus = false;
              });
            },
            child: Text('Reset Game'),
          ),
        ),